@media (max-width: 768px) {

  /* Stack image and text */
  .fiks > section {
    flex-direction: column;
    gap: 2rem;
  }

  /* Disable sticky on mobile */
  .sticky-container {
    position: static;
    width: 100%;
  }

  /* Full-width content */
  .content {
    max-width: 100%;
    padding: 0 1rem;
  }

  /* Better mobile typography */
  .content-block.highlight h2 {
    font-size: 2.1rem;
  }

  .content-block p {
    font-size: 1rem;
  }

  /* Softer dividers */
  .divider {
    margin: 3rem 0;
    opacity: 0.4;
  }
}

